{
    "name": "qbus/qbevents",
    "type": "typo3-cms-extension",
    "description": "TYPO3 Event Management",
    "keywords": [
        "TYPO3",
        "extension"
    ],
    "homepage": "https://www.qbus.de",
    "support": {
        "issues": "https://github.com/qbus-agentur/qbevents/issues"
    },
    "authors": [
        {
            "name": "Benjamin Franzke",
            "email": "bfr@qbus.de",
            "role": "Developer",
            "homepage": "https://www.qbus.de"
        }
    ],
    "license": "GPL-2.0+",
    "require": {
        "typo3/cms-core": "^6.2.14|^7.6.0|^8.0",
	"simshaun/recurr": "0.6.1"
    },
    "require-dev": {
        "namelesscoder/typo3-repository-client": "1.1.x-dev",
        "mikey179/vfsStream": "1.4.*@dev",
        "phpunit/phpunit": "~4.7.0"
    },
    "autoload": {
        "psr-4": {
            "Qbus\\Qbevents\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qbus\\Qbevents\\": "Tests",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
            "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
        }
    },
    "replace": {
        "qbevents": "self.version",
        "typo3-ter/qbevents": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/qbevents ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/qbevents"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
